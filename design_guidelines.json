  "project_name": "AI-Powered Fitness & Smart Nutrition Tracker",
  "persona": "E1 - The Performance Pro",
  "theme_strategy": "Dark Mode Dominant (The Tactical Gym)",
  "emotional_tone": "High Energy, Precision, Discipline, Futuristic",
  "color_palette": {
    "background": "#09090b",
    "foreground": "#fafafa",
