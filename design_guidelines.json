    "card_foreground": "#fafafa",
    "popover": "#18181b",
    "popover_foreground": "#fafafa",
    "primary": "#f97316",
    "primary_foreground": "#09090b",
    "secondary": "#27272a",
    "secondary_foreground": "#fafafa",
    "muted": "#27272a",
    "muted_foreground": "#a1a1aa",
    "accent": "#f97316",
    "accent_foreground": "#09090b",
    "destructive": "#ef4444",
    "destructive_foreground": "#fafafa",
    "border": "#27272a",
    "input": "#27272a",
    "ring": "#f97316",
    "chart_1": "#f97316",
    "chart_2": "#3b82f6",
    "chart_3": "#10b981",
    "chart_4": "#eab308",
    "chart_5": "#a855f7"
  },
  "typography": {
    "font_family_heading": "\"Barlow Condensed\", sans-serif",
    "font_family_body": "\"Manrope\", sans-serif",
    "import_instruction": "Add this to index.css or index.html: @import url('https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;500;700;900&family=Manrope:wght@400;500;700&display=swap');",
    "usage_rules": {
      "headings": "font-barlow font-black tracking-tight uppercase",
      "body": "font-manrope tracking-wide",
      "labels": "font-manrope text-xs uppercase tracking-[0.2em] text-muted-foreground"
    }
  },
  "layout_strategy": {
    "spacing": {
      "container_padding": "p-6 md:p-12",
      "section_gap": "gap-8 md:gap-12",
      "internal_card_padding": "p-6"
    },
    "grid_system": "The Bento Grid - Mode A (Asymmetry)",
    "border_radius": "rounded-none md:rounded-sm",
    "surface_styles": {
      "glass": "bg-black/40 backdrop-blur-xl border border-white/10",
      "card": "bg-card border border-border hover:border-primary/50 transition-colors duration-300",
      "active_card": "relative overflow-hidden border-primary/50 shadow-[0_0_30px_-10px_rgba(249,115,22,0.3)]"
    }
  },
  "components": {
    "buttons": {
      "primary": "bg-primary text-primary-foreground hover:bg-primary/90 h-12 px-8 uppercase font-bold tracking-widest text-sm skew-x-[-10deg] hover:skew-x-0 transition-transform",
      "secondary": "bg-secondary text-secondary-foreground hover:bg-secondary/80 h-12 px-6 uppercase font-semibold tracking-wider text-sm",
      "ghost": "hover:bg-accent/10 hover:text-accent uppercase tracking-wider text-xs"
    },
    "inputs": {
      "default": "bg-input/50 border-input focus:border-primary focus:ring-1 focus:ring-primary/50 h-12 text-lg"
    },
    "charts": {
      "library": "recharts",
      "style": "Minimalist, no grid lines, vibrant strokes, custom tooltips"
    },
    "navigation": {
      "mobile": "Fixed bottom bar, glassmorphism, iconic labels",
      "desktop": "Top bar, sticky, glassmorphism"
    }
  },
  "motion": {
    "library": "framer-motion",
    "install_command": "yarn add framer-motion",
    "presets": {
      "fade_in_up": {
        "initial": { "opacity": 0, "y": 20 },
        "animate": { "opacity": 1, "y": 0 },
        "transition": { "duration": 0.5, "ease": "easeOut" }
      },
      "stagger_container": {
        "hidden": { "opacity": 0 },
        "show": {
          "opacity": 1,
          "transition": {
            "staggerChildren": 0.1
          }
        }
      },
      "hover_scale": {
        "whileHover": { "scale": 1.02 }
      }
    }
  },
